<body style="margin-top:120px">

<i class="icon-home icon-2x pull-left icon-border"></i>
<h3>Ciudades</h3>
<br clear="all" /><br/>

<div class="table table-striped">
  <table>
    <tr>
      <th>Nombre</th>
      <th>Habilitada?</th>
      <th colspan="2"></th>
    </tr>

  <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= city.enabled_s? %></td>
      <td><%= link_to 'Editar', edit_city_path(city) %></td>
      <td><%= link_to 'Eliminar', city, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
    </tr>
  <% end %>
  </table>
</div>
<br />

<div class="btn btn-link"><%= link_to 'Nueva Ciudad', new_city_path %></div>
</body>