<!DOCTYPE html>
<html>
  <head>
    <title>Color En Movimiento::Admin</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to image_tag("logo.jpg", alt:"Color En Movimiento"), "#", {:width =>"260", :height => "59"} %>
          <nav>
            <% if current_user %>
              <ul class="nav pull-right">
                <li><a href="javascript:;">Bienvenido <%= current_user.name %></a></li>
                <li><a href="/admin" class="btn"><i class="icon-dashboard"></i> Dashboard</a></li>
                <li><a href="/cities" class="btn"><i class="icon-home"></i> Ciudades</a></li>
                <li><a href="/races" class="btn"><i class="icon-trophy"></i> Carreras</a></li>
                <li><a href="/options" class="btn"><i class="icon-th-list"></i> Opciones</a></li>
                <li><a href="/logout" class="btn"><i class="icon-signout"></i> Salir</a></li>
              </ul>
            <% end %>
          </nav>
        </div>
      </div>
    </header>
    <div class="container">
      <% if flash[:alert] %>
        <p style="color:red"><%= flash[:alert] %></p>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>