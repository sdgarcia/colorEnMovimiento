<body style="margin-top:120px">

<i class="icon-dashboard icon-2x pull-left icon-border"></i>
<h3>Dashboard</h3>
<br clear="all" /><br/>

<div style="float:right" class="btn btn-link">
  <%= link_to 'Descargar CSV Mails', "/admin/csv" %><br/>
  <%= link_to 'Descargar CSV Votos', "/admin/csv_votos" %>

</div> 


<div class="table table-striped">
<table>
  <tr>
    <th>Ciudad</th>
    <th>Votos<th>
  </tr>
  <% @votes.sort_by {|e| -e[1] }.each do |vote| %>
  <tr>
    <td><%= City.exists?(vote[0]) ? City.find(vote[0]).name : "N/A" %></td>
    <td style="text-align:right"><% if (vote[0] == 6) %> 
      <%= @votes_other %>
      <% else %>
      <%= vote[1] %>
      <% end %></td>
    <td><%= link_to "Detalle", :controller => "votes_admin", :action => "detail", :id => vote[0] %></td>
  </tr>
   <% end %>
   <tr>
    <td><strong>Total</strong></td>
    <td style="text-align:right"><strong><%= @total_votes %></strong></td>
    <td><%= link_to "Detalle", :controller => "votes_admin", :action => "index" %></td>
   </tr>
 </table>
<div>

</body>