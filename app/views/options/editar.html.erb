<body style="margin-top:120px">

<i class="icon-th-list icon-2x pull-left icon-border"></i>
<h3>Opciones</h3>
<br clear="all" /><br/>

	<%= form_for(@option, :url => "") do |f| %>
		<p>Nombre: <strong><%= @option.key %></strong></p>

		<p>
			<%= f.label :value, "Valor" %>
			<%= f.text_area :value, :style => "height:60px; width:300px" %>
		</p>

		<p>
			<%= f.submit "Guardar", :class => "btn btn-primary" %>
		</p>
	<% end %>

</body>