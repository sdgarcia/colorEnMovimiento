<h3>ONG Aliadas</h3><br/><br/>

<% @race.charities.each{ |c| %>
	<div class="pull-left" style="width:220px">
		<%= image_tag c.img.url(:thumb) %> <br/>
		<button onclick="if(confirm('¿Seguro de eliminar?')) window.location='?delete_charity=<%= c.id %>';" class="btn btn-danger">Eliminar</button>
	</div>
<% } %>
<br clear="all" /><br/>
	<div class="pull-left" style="width:220px">
		<strong>Nueva</strong>
		<%= form_for(@charity, :url => "", :html => {:multipart => true}) do |f| %>
